<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_pressed="true">
        
        <shape>
            
            <stroke android:width="2px" android:color="#F0F0F0" />

            <corners android:radius="7dp" />
            
            <gradient android:angle="270" android:endColor="#FF6200" android:startColor="#cc4e00" />

        </shape>
       
    </item>
    
    <item android:state_focused="false" android:state_pressed="true">
        
        <shape>
    
        	<stroke android:width="2px" android:color="#F0F0F0" />

            <corners android:radius="7dp" />
            
            <gradient android:angle="270" android:endColor="#FF6200" android:startColor="#cc4e00" />
       
       	</shape>
       
    </item>
    
    <item android:state_focused="true" android:state_pressed="false">
        
        <shape>
            
            <stroke android:width="1px" android:color="#F0F0F0" />

            <corners android:radius="7dp" />
            
            <gradient android:angle="270" android:endColor="#FF6200" android:startColor="#FF6200" />

        </shape>
       
    </item>
    
    <item android:state_focused="false" android:state_pressed="false">
        
        <shape>
            
            <gradient android:angle="270" android:endColor="#FF6200" android:startColor="#ff914d" />

            <stroke android:width="1px" android:color="#F0F0F0" />

            <corners android:radius="7dp" />

        </shape>
        
    </item>
    
    <item android:state_enabled="true">
        
        <shape>
            
            <gradient android:angle="270" android:endColor="#0B4073" android:startColor="#3B6998" />

        </shape>
        
    </item>

</selector>